{
  "feature_management": {
    "feature_flags": [
      {
        "id": "DebugMode",
        "enabled": false
      }
    ]
  },
  "NewsReportOptions": {
    "MaxFeedCount": 10,
    "YahooFinanceUrl": "https://finance.yahoo.com/news/rssindex",
    "NewsMinimalistUrl": "https://rss.beehiiv.com/feeds/4aF2pGVAEN.xml",
    "PmReportHour": 17,
    "PmReportMinute": 0,
    "AmReportHour": 9,
    "AmReportMinute": 0
  },
  "DailyNewsOptions": {
    "ReportHours": [8, 13, 18, 22],
    "WorldRssList": [
      "https://feeds.content.dowjones.io/public/rss/RSSWorldNews",
      "https://feeds.bbci.co.uk/news/world/rss.xml",
      "http://rss.cnn.com/rss/cnn_world.rss",
      "https://rss.nytimes.com/services/xml/rss/nyt/World.xml",
      "https://www.channelnewsasia.com/api/v1/rss-outbound-feed?_format=xml&category=6311"
    ],
    "MarketRssList": ["https://feeds.bloomberg.com/markets/news.rss"],
    "MinimumReportCount": 2,
    "TimeZone": "DOTNET_TIMEZONE_CODE"
  },
  "GeminiOptions": {
    "ApiKey": "YOUR_GEMINI_API_KEY",
    "TextBaseUrl": "https://generativelanguage.googleapis.com/v1/models/",
    "Model": "gemini-2.5-flash",
    "BaseAddress": "https://generativelanguage.googleapis.com/",
    "ApiKeyHeader": "x-goog-api-key"
  },
  "TelegramOptions": {
    "ApiKey": "TELEGRAM_BOT_API_KEY",
    "MaxCharPerMessage": 4096,
    "WaitTimeLimitMs": 5000,
    "ChatIdTest": "TEST_CHAT_ID",
    "ChatIdNews": "ACTUAL_CHAT_ID"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": ["FromLogContext"]
  }
}
